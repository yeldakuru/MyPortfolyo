@model ToDoList
@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}







<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">To Do</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">New To Do Adding Page </div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Title & Content</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Date</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>Visual Path</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							
							<button class="btn btn-primary">Add to do</button>
						</form>
						
					</div>
				</div>


			</div>

		</div>
	</div>
</div>


