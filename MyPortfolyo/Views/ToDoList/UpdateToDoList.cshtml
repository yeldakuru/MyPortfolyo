@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">To Do</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> To Do Update Page </div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ToDoListId "/>
							<label>Title & Content</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Date</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>Visual Path</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />

							<button class="btn btn-success">Update to do</button>
						</form>

					</div>
				</div>


			</div>

		</div>
	</div>
</div>


